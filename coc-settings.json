{
	"codeLens.enable": true,

  "diagnostic.checkCurrentLine": false,
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.virtualText": true,

  "signature.enable": true,
  "signature.hideOnTextChange": false,
  "coc.preferences.promptInput": true,
  "coc.preferences.floatActions": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.previewAutoClose": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.enableFloatHighlight": true,
	"coc.preferences.formatOnSaveFiletypes": [
		"dart",
    "clojure"
	],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "git.enableGutters": false,
  "suggest.completionItemKindLabels": {
		"keyword": "\uf1de",
		"variable": "\ue79b",
		"value": "\uf89f",
		"operator": "\u03a8",
		"function": "\u0192",
		"reference": "\ufa46",
		"constant": "\uf8fe",
		"method": "\uf09a",
		"struct": "\ufb44",
		"class": "\uf0e8",
		"interface": "\uf417",
		"text": "\ue612",
		"enum": "\uf435",
		"enumMember": "\uf02b",
		"module": "\uf40d",
		"color": "\ue22b",
		"property": "\ue624",
		"field": "\uf9be",
		"unit": "\uf475",
		"event": "\ufacd",
		"file": "\uf723",
		"folder": "\uf114",
		"snippet": "\ue60b",
		"typeParameter": "\uf728",
		"default": "\uf29c"
	},

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "initializationOptions": {
        "ignore-classpath-directories": true
      },
      "trace.server": "verbose"
    }
  },
  
	"flutter.runDevToolsAtStartup": true,

  "python.jediEnabled": false,
  "python.autoUpdateLanguageServer": true,
  "python.pythonPath": "python3",
  "python.linting.enabled": true,

  "go.goplsOptions": {
    "deepCompletion": true
  }

}
